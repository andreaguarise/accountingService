<div class="faust_form">
	<% if flash[:alert] %>
	<p id="notice">
		<%= flash[:alert] %>
	</p>
	<% end %>
	<%= form_tag do %>
	<fieldset>
		<table>
		<tr>
			<td><label for="name">User:</label></td>
			<td><%= text_field_tag :name, params[:name] %></td>
		</tr>
		<tr>
			<td><label for="password">Password:</label></td>
			<td><%= password_field_tag :password, params[:password] %></td>
		</tr>
		<tr>
			<td></td>
			<td id="submit"><%= submit_tag "Login" %></td>
		</tr>
		</table>
	</fieldset>
	<% end %>
</div>