<h1>Sites</h1>

<%= link_to 'New Site', new_site_path %>

<table class="management">
  <tr>
    <th>Name<%= upArrowLink "name"%><%= downArrowLink "name" %></th>
    <th>Cloud Records</th>
    <th>Grid CPU Records</th>
    <th>Batch CPU Records</th>
    <th>Grid Storage Records</th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= link_to site.name, site %></td>
    <td><%= site.cloud_records.count %></td>
    <td><%= @apelBySite[site.id] if @apelBySite %></td>
    <td><%= @batchBySite[site.id] if @batchBySite%></td>
    <td><%= @emiStorageBySite[site.name] if @emiStorageBySite %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= will_paginate @sites %></p>


