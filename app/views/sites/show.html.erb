<p id="notice"><%= notice %></p>

<div id="pageTop">
  <div id="mainTitle">
  Site: <%= @site.name %> - Description:</b> <%= @site.description %>
  </div>



<table>
	<tr>
<td>		
<H3>Registered resources</H3>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Resource type</th>
  </tr>

<% @site.resources.sort_by{|e| e[:name]}.each do |resource| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td class="main_field"><%= link_to resource.name, resource %></td>
    <td><%= resource.description %></td>
    <td><%= resource.resource_type.name %></td>
  </tr>
<% end %>
</table>
</td>
<td>
<h3>Record statistics</h3>

<table>
	<tr>
		<th></th>
		<th>Count</th>
		<th>Earliest</th>
		<th>Latest</th>
	</tr>
	<% @stats.sort_by{|e| e[0]}.each do |row| %>
	<tr class="<%= cycle("odd", "even") %>">
      <td class="main_field"><%= row[0] %></td>
      <td><%= row[1] %></td>
      <td><%= row[2] %></td>
      <td><%= row[3] %></td>
    </tr>
    <% end %>
</table>
</td>
</tr>
</table>
</div>
