<h1>Listing resources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Site</th>
    <th>Resource type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td class="main_field"><%= resource.name %></td>
    <td><%= resource.description %></td>
    <td><%= resource.site.name %></td>
    <td><%= resource.resource_type.name %></td>
    <td class="list_actions"><%= link_to 'Show', resource %></td>
    <td class="list_actions"><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td class="list_actions"><%= link_to 'Destroy', resource, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

