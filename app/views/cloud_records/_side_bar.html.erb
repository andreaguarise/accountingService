<H3>Cloud Records</H3>

<div id = "sidemenu">
<ul>
<li><%= link_to 'Record list', cloud_records_url%></li>
<li><%= link_to 'Record summaries', cloud_record_summaries_url%></li>
</ul>
</div>

<div id = "sidesearch">
<%= form_tag(search_cloud_records_path, :method => 'get' ) do %>
  <% CloudRecord.attrSearchable.each do |item| %>
	<div class="field">
    	<p><%= item %>:</p>
    	<%= search_field_tag (item, params[item]) %>
  	</div>
  <% end %>
  <div>
  <p></p>
  <%= submit_tag("Search...") %>
  </div>
<% end %>
</div>
