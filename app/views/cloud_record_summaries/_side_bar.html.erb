<H3>Cloud Record Summaries</H3>

<div id = "sidemenu">
<ul>
<li><%= link_to 'Record list', cloud_records_url%></li>
<li><%= link_to 'Record summaries', cloud_record_summaries_url%></li>
</ul>
</div>

<div id = "sidesearch">
<%= form_tag(search_cloud_record_summaries_path, :method => 'get' ) do %>
  <% CloudRecordSummary.attrSearchable.each do |item| %>
	<div class="field">
    	<p><%= item %>:</p>
    	<%= search_field_tag (item, params[item]) %>
  	</div>
  <% end %>
  <div class="checkbox">
    	<%= check_box_tag(:doGraph, '1', true) %>
		<%= label_tag(:doGraph, "Draw graphics") %>	
  </div>
  <div>
  <p></p>
  <%= submit_tag("Search...") %>
  </div>
<% end %>
</div>
